# .env.production (for both services - adjust accordingly)
FLASK_ENV=production
DEBUG=false

# IMPORTANT: Use strong secrets in production!
SECRET_KEY=your-super-secret-production-key-here

# Production database paths
DATABASE=/app/data/production.db

# Production CORS (specific domains only!)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# For task service in production
USER_SERVICE_URL=http://user-service:5001